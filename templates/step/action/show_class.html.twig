<div class="action action-php">
    {% if note %}
    <div class="badge" style="margin-bottom: 0.25rem;">{{ note }}</div>
    {% endif %}
    {% if warning %}
    <div class="callout" style="color:#ffc107;">âš  {{ warning }}</div>
    {% else %}
    {% if signature %}
    <div class="small" style="opacity: 0.8; margin-bottom: 0.3rem;">{{ signature }}</div>
    {% endif %}
    <pre>
        <code class="language-php" data-trim data-noescape>{{ code }}</code>
    </pre>
    {% if path %}
    <div class="small" style="opacity: 0.7;">{{ path }}</div>
    {% endif %}
    {% endif %}
</div>
