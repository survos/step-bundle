{# file: templates/step/action/console.html.twig #}
<div class="action action-console card shadow-sm mb-3">
  <div class="card-header d-flex justify-content-between align-items-center">

{#      <span class="fw-semibold">Console</span>#}

    {% if prefer == 'symfony' %}<span class="badge bg-primary">symfony</span>{% endif %}
    {% if prefer == 'php' %}<span class="badge bg-secondary">php</span>{% endif %}
  </div>
  <div class="card-body">
    {% if note %}<p class="mb-2">{{ note }}</p>{% endif %}

{#    <dl class="row small mb-2">#}
{#      <dt class="col-sm-3">Command</dt>#}
{#      <dd class="col-sm-9"><code>{{ command }}</code></dd>#}


      {% if false and args and args|length %}
        <dt class="col-sm-3">Args</dt>
        <dd class="col-sm-9">
          <ul class="mb-0">
            {% for a in args %}
              <li><code>{{ a }}</code></li>
            {% endfor %}
          </ul>
        </dd>
      {% endif %}

      {% if cwd %}
        <dt class="col-sm-3">CWD</dt>
        <dd class="col-sm-9"><code>{{ cwd }}</code></dd>
      {% endif %}

      {% if env %}
        <dt class="col-sm-3">Env</dt>
        <dd class="col-sm-9">
          <pre class="mb-0"><code class="language-bash">{{ env|json_encode(constant('JSON_PRETTY_PRINT') b-or constant('JSON_UNESCAPED_SLASHES')) }}</code></pre>
        </dd>
      {% endif %}
    </dl>

    <pre class="mb-0"><code class="language-bash">{{ code }}</code></pre>
  </div>
</div>
