{# File: templates/step/action/_action.html.twig #}
<div class="action action-{{ lang|default('text')|lower }}">
  {% if note %}<div class="badge" style="margin-bottom:.25rem;">{{ note }}</div>{% endif %}
  <pre><code class="language-{{ lang|default('text')|lower }}">{{ code is defined and code is not null ? code|e : '' }}</code></pre>
  {% if path %}<div class="small" style="opacity:.7;">{{ path }}</div>{% endif %}
</div>
