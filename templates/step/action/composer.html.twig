<div class="action action-composer card shadow-sm mb-3">
  <div class="card-header d-flex justify-content-between align-items-center">
    <span class="fw-semibold">Composer</span>
    {% if dev %}<span class="badge bg-warning text-dark">dev</span>{% endif %}
  </div>
  <div class="card-body">
    {% if note %}<p class="mb-2">{{ note }}</p>{% endif %}
      {{ dev ? 'dev' }}
    {% if packages is defined and packages %}
        {% set code %}
    {% for p in packages %}composer req {{ dev ? '-dev' }} {{ p }}
    {% endfor %}
        {% endset %}
        <pre class="mb-0"><code class="language-{{ lang|default('bash') }}">{{ code }}</code></pre>

{#        <ul class="mb-2">#}
{#        {% for p in packages %}#}
{#          <li><code>composer req {{ dev ? '-dev' }} {{ p }}</code></li>#}
{#        {% endfor %}#}
{#      </ul>#}
    {% endif %}
  </div>
</div>
