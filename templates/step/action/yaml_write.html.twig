{# file: templates/step/action/yaml_write.html.twig #}
<div class="action action-yaml card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span class="fw-bold text-muted">YAML</span>
        {% if path %}
        <code class="small text-muted">{{ path }}</code>
        {% endif %}
    </div>
    <div class="card-body">
        {% if note %}
        <p class="mb-3 mt-0 text-start">{{ note }}</p>
        {% endif %}
        <pre>
            <code class="language-yaml" data-trim data-noescape>{{ code }}</code>
        </pre>
        {% if merge is defined %}
        <div class="mt-2 small text-muted">{{ merge ? 'Merge' : 'Replace' }}</div>
        {% endif %}
    </div>
</div>
